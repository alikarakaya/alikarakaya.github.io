select 
	--ck.date_01 as uyeliktarihi,
	--ck.code as sicilno ,
	(select value from core_keyvalue where entity_type_id=39 and status = 
'1' and id = ck.ck_03) as uyelikdurumu,
	ck.value as firmaadi,
	--ck.value_02 as vergino,
	--ck.value_03 as vergidairesi,
	ilet.value as ilgilikisi,
	ilet.value_01 as telefon1,
	ilet.value_06 as telefon2,
	ilet.value_02 as gsm1,
	ilet.value_03 as gsm1,
	ilet.value_04 as fax1,
	ilet.value_05 as fax2,
	ilet.description as aciklama,
	ilet.value_07 as ilgilikisiemail
from 
	core_keyvalue ck ,core_keyvalue ilet
where 
	ck.entity_type_id = 20 
	and ck.status = '1' 
        and ck.ck_02 = 224893
        and ck.ck_03 = 279682
	and ilet.entity_type_id = 24
	and ck.id = ilet.ck_owner
--	and ck.code = '14092'
order by ck.code;

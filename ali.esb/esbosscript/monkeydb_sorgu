select 
ck.id,
ck.value,
(select code from core_keyvalue where entity_type_id = 8 and status ='1' and ck.ck_02 =id) as type,
(select value from core_keyvalue where entity_type_id = 20 and status ='1' and ck.ck_03 =id) as icerik_saglayici,
(select value from core_keyvalue where entity_type_id = 20 and status ='1' and id = (select ck_02 from core_keyvalue where entity_type_id = 5 and status ='1' and id =ck.ck_owner)) as geldigiyer,
(select date_01 from core_keyvalue where entity_type_id = 20 and status ='1' and id = (select ck_02 from core_keyvalue where entity_type_id = 5 and status ='1' and id =ck.ck_owner)) as uyelik_tarihi
from core_keyvalue ck where ck.entity_type_id = 28 
and ck.status = '1' 
order by ck.id desc
limit 1000;
